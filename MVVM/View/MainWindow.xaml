<Window x:Class="Jarkom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jarkom" 
        xmlns:viewmodel="clr-namespace:Jarkom.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="650" Width="1200"
        Background="{DynamicResource WindowBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- TopBar -->
        <Border Grid.ColumnSpan="2"
                Background="{DynamicResource TopBarBackgroundBrush}"
                MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label Content="W Chat"
                       Foreground="{DynamicResource AppSecondaryTextBrush}"
                       FontWeight="SemiBold"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <Button Width="20" Height="20"
                           Content="−"
                           Background="Transparent"
                           BorderThickness="0"
                           Foreground="{DynamicResource AppSecondaryTextBrush}"
                           Margin="0,3,0,0"
                           FontWeight="Bold"
                           Click="ButtonMinimize_Click"/>

                    <Button Width="20" Height="20"
                            Content="◻"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource AppSecondaryTextBrush}"
                            FontWeight="Bold"
                            Click="ButtonMaximize_Click"/>

                    <Button Width="20" Height="20"
                            Content="⨉"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource AppSecondaryTextBrush}"
                            FontWeight="Bold"
                            Click="ButtonClose_CLick"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- SideBar -->
        <Grid Background="{DynamicResource SidebarBackgroundBrush}"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Contacts"
                   Foreground="{DynamicResource AppSecondaryTextBrush}"
                   FontWeight="Medium"
                   VerticalAlignment="Center"
                   Margin="8,0,0,0"/>

            <ListView ItemsSource="{Binding Contacts}"
                      SelectedItem="{Binding SelectedContact}"
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="1"
                      ItemContainerStyle="{StaticResource ContactCard}"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Background="{DynamicResource FooterBackgroundBrush}">
                
                <Border CornerRadius="25"
                        Width="30" Height="30"
                        Background="#3bff6f"
                        Margin="18,0,0,0"/>
                        
                <StackPanel VerticalAlignment="Center"
                            Width="120">
                    <Grid Margin="0,-5,0,-5">
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource AppPrimaryTextBrush}"
                                 FontWeight="SemiBold"/>
                    </Grid>

                    <Label Content="{Binding ConnectionStatus}"
                           Foreground="{DynamicResource AppSecondaryTextBrush}"
                           FontWeight="SemiBold"
                           FontSize="10"
                           Margin="-2,-5,0,-5"/>
                </StackPanel>

                <Button Command="{Binding ConnectCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ButtonConnect_Click"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0">
                    <Image Source="{Binding ConnectionIcon}"
                           Width="20"
                           Height="20"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Chat Area -->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- TopBarChat -->
            <Border BorderBrush="{DynamicResource ChatTopBarBrush}"
                    BorderThickness="2">
                <Grid HorizontalAlignment="Stretch" Margin="8">
                    <Label Content="@Username"
                           Foreground="{DynamicResource AppPrimaryTextBrush}"
                           FontWeight="Bold"
                           Margin="5,0,5,0"
                           VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">

                        <Image Width="18" Height="18"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,5,0"
                               Source="/Icons/phone.png"/>
                        <Image Width="20" Height="20"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,5,0"
                               Source="/Icons/camera.png"/>

                        <!-- Toggle Theme Button -->
                        <Button Width="24" Height="24"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource AppSecondaryTextBrush}"
                                Click="ToggleTheme_Click"
                                ToolTip="Switch Theme"
                                Margin="5,0,5,0">
                            ☀
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Chat list -->
            <ListView ItemsSource="{Binding SelectedContact.Messages}"
                      Background="Transparent"
                      BorderThickness="0"
                      ItemContainerStyle="{StaticResource ChatItem}"
                      Margin="8,0,0,0"
                      Grid.Row="1"/>

            <!-- MessageBox -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Row="1"
                         Height="50"
                         Text="Message @Username"
                         Style="{StaticResource MessageBox}"
                         Grid.ColumnSpan="2"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            Margin="0,0,16,0">

                    <Image Source="/Icons/plus.png"
                           Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="Fant"
                           Margin="5,5,5,0"/>

                    <Image Source="/Icons/send.png"
                           Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="Fant"
                           Margin="5,5,16,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
