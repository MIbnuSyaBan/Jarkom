<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1F23"/>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1F23"/>
    <SolidColorBrush x:Key="TopBarBackgroundBrush" Color="#252525"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#2F3136"/>
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#292B2F"/>
    <SolidColorBrush x:Key="ChatTopBarBrush" Color="#2F3136"/>

    <!-- Text -->
    <SolidColorBrush x:Key="AppPrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AppSecondaryTextBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#393B40"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#292B2F"/>

</ResourceDictionary>
